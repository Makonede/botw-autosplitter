{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "b",
			"problemMatcher": [
				"$rustc",
				"$rust-panic"
			],
			"group": "build",
			"label": "Build Auto Splitter (Debug)"
		},
		{
			"type": "cargo",
			"command": "b",
			"args": [
				"--release"
			],
			"problemMatcher": [
				"$rustc",
				"$rust-panic"
			],
			"group": "build",
			"label": "Build Auto Splitter (Release)"
		},
		{
			"type": "cargo",
			"command": "watch",
			"args": [
				"-x",
				"b"
			],
			"problemMatcher": [
				"$rustc",
				"$rust-panic"
			],
			"label": "Watch Auto Splitter"
		},
	]
}
